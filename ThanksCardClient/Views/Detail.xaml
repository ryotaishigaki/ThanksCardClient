<UserControl x:Class="ThanksCardClient.Views.Detail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel>
            <DataGrid >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="タイトル" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Text="{Binding UThanksCards.Title}"/>

            <DataGrid >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="差出人" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Text="{Binding UThanksCards.From.Name}"></TextBlock>

            <DataGrid >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="内容" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Text="{Binding UThanksCards.Body}"></TextBlock>

            <StackPanel>
                <TextBlock Text=""/>
                <Button Content="戻る" Command="{Binding ShowThanksCardListCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

