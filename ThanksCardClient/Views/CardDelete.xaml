<UserControl x:Class="ThanksCardClient.Views.CardDelete"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThanksCardClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="224.801" d:DesignWidth="319.667">
    <Grid>
        <StackPanel>
            <TextBlock Text="全体掲示"></TextBlock>
            <DataGrid >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="タイトル" />
                    <DataGridTextColumn Header="From"/>
                    <DataGridTextColumn Header="To"/>
                    <DataGridTextColumn Header="作成日時" />
                </DataGrid.Columns>
                <DataGridTemplateColumn Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- CommandParameter に {Binding} とだけ記述すると、TagMstViewModel.Tags の要素、つまり Tag モデルを指定したことになる。-->
                            <Button Content="削除" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
